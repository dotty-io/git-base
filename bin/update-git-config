#!/bin/sh

echo "# AUTO-GENERATED" > "$HOME/.gitconfig"
echo "# This file is auto-generated by '$0' from the contents of '~/.gitconfig.d/*.config', do not edit." >> "$HOME/.gitconfig"
echo "# If you wish to change your Git configuration, add a '[name].config' file in '~/.gitonfig.d/', then run '$0'." >> "$HOME/.gitconfig"

if [ -d "$HOME/.gitconfig.d" ]; then
    for f in `ls -1 $HOME/.gitconfig.d/*.config`; do
	      echo        >> "$HOME/.gitconfig"
	      echo "# $f" >> "$HOME/.gitconfig"
        cat "$f"    >> "$HOME/.gitconfig"
    done
fi
